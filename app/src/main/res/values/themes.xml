<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IstriaEvents" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_secondary</item>
        <item name="colorSecondaryVariant">@color/green_secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorContainer">@color/blue</item>
        <item name="colorOnContainer">@color/blue</item>
        <item name="colorPrimaryContainer">@color/blue</item>
        <item name="colorSurfaceContainer">@color/blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/blue_variant</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.IstriaEvents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="android:windowBackground">@color/dirt_white</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/blue_variant</item>

        <item name="colorContainer">@color/blue</item>
        <item name="colorOnContainer">@color/blue</item>
        <item name="colorPrimaryContainer">@color/blue</item>
        <item name="colorSurfaceContainer">@color/blue</item>
    </style>

    <style name="Theme.IstriaEvents.Splash" parent="Theme.IstriaEvents">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.IstriaEvents.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IstriaEvents.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/three_unit</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/Rounded</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorSurface">@color/blue</item>
        <item name="colorOnSurface">@color/green_secondary</item>
    </style>

    <style name="SpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="backgroundTint">@color/woodsmoke</item>
    </style>

    <style name="SpinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">

    </style>

    <style name="Widget.MyApp.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@drawable/selector_chip_bg</item>
        <item name="backgroundColor">@drawable/selector_chip_bg</item>
        <item name="android:textColor">@color/dirt_white</item>
        <item name="android:checkable">true</item>
    </style>
</resources>